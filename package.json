{
  "name": "lib-tools",
  "version": "0.0.1-alpha.7",
  "description": "The Lib Tools helps you simplify the build/bundle, test and npm packaging workflows for common library project types such as Typescript/JavaScript library projects, Angular library projects and Assets module projects (e.g. sass, scss, css or icons).",
  "author": "DagonMetric",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DagonMetric/lib-tools.git"
  },
  "bugs": {
    "url": "https://github.com/DagonMetric/lib-tools/issues"
  },
  "homepage": "https://github.com/DagonMetric/lib-tools",
  "keywords": [
    "lib-tools",
    "library-tools",
    "workflow-tools",
    "build-tools",
    "npm-packaging-tools",
    "library-packaging-tools",
    "angular-library-packaging",
    "typescript-library-packaging",
    "style-library-packaging",
    "angular",
    "typescript",
    "sass",
    "scss",
    "postcss",
    "autoprefixer",
    "webpack",
    "rollup"
  ],
  "engines": {
    "node": ">=10.9.0"
  },
  "bin": {
    "lib": "./bin/lib"
  },
  "experimental": true,
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "scripts": {
    "lint": "eslint -c .eslintrc.json --ext .js,.ts .",
    "compile": "tsc --project tsconfig.build.json",
    "generate-schemas": "node tools/generate-schemas.js",
    "copy-files": "node tools/copy-files.js",
    "show-help": "node -r source-map-support/register dist/bin/lib --help",
    "build": "npm-run-all compile generate-schemas copy-files show-help",
    "build:samples": "npm-run-all --parallel build:sample:*",
    "build:sample:style-module-demo": "node -r source-map-support/register ./dist/bin/lib build --config=samples/style-module-demo/workflows.json --version=1.0.0",
    "build:sample:typescript-library-project-demo": "node -r source-map-support/register ./dist/bin/lib build --config=samples/typescript-library-project-demo/workflows.json --version=1.0.0"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "ajv": "^6.12.3",
    "autoprefixer": "^9.8.4",
    "builtins": "^3.0.1",
    "clean-css": "^4.2.3",
    "cross-spawn": "^7.0.3",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "html-minifier": "^4.0.0",
    "magic-string": "^0.25.7",
    "minimatch": "^3.0.4",
    "postcss": "^7.0.32",
    "resolve": "^1.17.0",
    "rollup": "^2.21.0",
    "sass": "^1.26.10",
    "supports-color": "^7.1.0",
    "typescript": "^3.9.6",
    "uglify-js": "^3.10.0",
    "update-notifier": "^4.1.0",
    "webpack": "^4.43.0",
    "yargs": "^15.4.0"
  },
  "devDependencies": {
    "@types/autoprefixer": "^9.7.2",
    "@types/clean-css": "^4.2.2",
    "@types/cross-spawn": "^6.0.2",
    "@types/fs-extra": "^9.0.1",
    "@types/glob": "^7.1.3",
    "@types/html-minifier": "^4.0.0",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^14.0.19",
    "@types/resolve": "^1.17.1",
    "@types/sass": "^1.16.0",
    "@types/supports-color": "^5.3.0",
    "@types/uglify-js": "^3.9.3",
    "@types/webpack": "^4.41.21",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jsdoc": "^28.6.1",
    "eslint-plugin-prettier": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.19",
    "typescript-json-schema": "^0.42.0"
  }
}
