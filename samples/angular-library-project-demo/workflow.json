{
  "$schema": "../../dist/schemas/schema.json",
  "projects": {
    "ng-config": {
      "root": "./modules/ng-config",
      "tasks": {
        "build": {
          "outputPath": "dist/packages/ng-config",
          "script": {
            "compilations": "auto"
          }
        },
        "test": {
          "testIndexFile": "test/test.ts",
          "tsConfig": "tsconfig.test.json",
          "envOverrides": {
            "ci": {
              "codeCoverageExclude": [
                "**/test.ts",
                "**/index.ts",
                "**/public_api.ts"
              ],
              "reporters": [
                "junit",
                "coverage-istanbul"
              ],
              "browsers": [
                "ChromeHeadlessCI"
              ],
              "singleRun": true
            }
          }
        }
      }
    },
    "ng-config-http-config": {
      "root": "./modules/ng-config/http-config",
      "tasks": {
        "build": {
          "outputPath": "dist/packages/ng-config",
          "script": {
            "compilations": "auto"
          }
        }
      }
    },
    "ng-config-firebase-remote-config": {
      "root": "./modules/ng-config-firebase-remote-config",
      "tasks": {
        "build": {
          "outputPath": "dist/packages/ng-config-firebase-remote-config",
          "script": {
            "compilations": "auto"
          }
        }
      }
    }
  }
}
