{
  "$schema": "../../dist/schemas/schema.json",
  "projects": {
    "typescript-library-project-demo": {
      "root": "./",
      "actions": {
        "build": {
          "outputPath": "dist/full-config-demo/typescript-library-project-demo",
          "script": {
            "compilations": [
              {
                "declaration": true,
                "target": "ES2015",
                "outDir": "esm2015"
              },
              {
                "declaration": false,
                "target": "es5",
                "outDir": "esm5"
              }
            ],
            "tsConfig": "tsconfig.build.json",
            "addToPackageJson": true,
            "entry": "public_api.js"
          }
        }
      }
    }
  }
}
