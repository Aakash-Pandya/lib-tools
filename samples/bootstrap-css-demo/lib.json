{
  "$schema": "../../dist/schemas/schema.json#",
  "projects": {
    "bootstrap-css-demo": {
      "root": "./",
      "tasks": {
        "build": {
          "outputPath": "dist",
          "copy": [
            {
              "from": "src/scss",
              "to": "scss/"
            }
          ],
          "styles": [
            {
              "input": "src/scss/bootstrap.scss",
              "output": "css/bootstrap.css",
              "minify": true,
              "vendorPrefixes": true,
              "sourceMap": true
            }
          ]
        }
      }
    }
  }
}
